<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.SubNavigationPage_Armors"
             BackgroundImageSource="Background.png">

    <NavigationPage.TitleView>
        <Label Text="Defensive Gear" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="PageLayout" Margin="20">

                <Button Text="Helmet Level 1" Clicked="MoveToHelmetLv1Subpage" />

                <Button Text="Helmet Level 2" Clicked="MoveToHelmetLv2Subpage" />

                <Button Text="Helmet Level 3" Clicked="MoveToHelmetLv3Subpage" />

                <Button Text="Helmet Level 4" Clicked="MoveToHelmetLv4Subpage" />

                <Button Text="Armor Level 1" Clicked="MoveToArmorLv1Subpage" />

                <Button Text="Armor Level 2" Clicked="MoveToArmorLv2Subpage" />

                <Button Text="Armor Level 3" Clicked="MoveToArmorLv3Subpage" />

                <Button Text="Armor Level 4" Clicked="MoveToArmorLv4Subpage" />

                <Button Text="Armor Level 5" Clicked="MoveToArmorLv5Subpage" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>