<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.SubNavigationPage_Weapons">

    <NavigationPage.TitleView>
        <Label Text="Weapons" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="PageLayout" Margin="20">

                <Button Text="R-301" Clicked="MoveToR301Page"/>

                <Button Text="Flatline VK-47" Clicked="MoveToFlatlinePage"/>

                <Button Text="Alternator" Clicked="MoveToAlternatorPage"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>