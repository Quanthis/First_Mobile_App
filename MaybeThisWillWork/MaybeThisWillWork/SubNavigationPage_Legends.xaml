<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.SubNavigationPage_Legends"
             BackgroundImageSource="Background.png">

    <NavigationPage.TitleView>
        <Label Text="Legends" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout Margin="20">

            <Button Text="Bloodhound" Clicked="MoveToBloodhoundSubpage" />

            <Button Text="Gibraltar" Clicked="MoveToGibraltarSubpage" />

            <Button Text="Lifeline" Clicked="MoveToLifelineSubpage" />

            <Button Text="Pathfinder" Clicked="MoveToPathfinderSubpage" />

            <Button Text="Bangalore" Clicked="MoveToBangaloreSubpage" />
            
            <Button Text="Wraith" Clicked="MoveToWraithSubpage" />

        </StackLayout>
    </ScrollView>
</ContentPage>