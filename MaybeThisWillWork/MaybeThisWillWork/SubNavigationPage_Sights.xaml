<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.SubNavigationPage_Sights"
             BackgroundImageSource="Background.png">

    <NavigationPage.TitleView>
        <Label Text="Optics" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="PageContent" Margin="20">

                <Button Text="1x 'Classic'" Clicked="MoveToClassicx1"/>

                <Button Text="2x 'Bruiser'" Clicked="MoveToClassicx2"/>

                <Button Text="1x 'Holo'" Clicked="MoveToHolox1"/>

                <Button Text="1x-2x Variable 'Holo'" Clicked="MoveToHolox2"/>

                <Button Text="3x 'Ranger'" Clicked="MoveToRangerx3"/>

                <Button Text="2x-4x Variable AOG" Clicked="MoveToAOGx2_4"/>

                <Button Text="1x Digital Threat" Clicked="MoveToDigitalx1"/>

                <Button Text="6x Sniper" Clicked="MoveToSniperx6"/>

                <Button Text="4x-8x Sniper" Clicked="MoveToSniperx4_8"/>

                <Button Text="4x-10 Digital Sniper" Clicked="MoveToSniperx4_10"/>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>