<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.SubNavigationPage_Grenades"
             BackgroundImageSource="Background.png">

    <NavigationPage.TitleView>
        <Label Text="Grenades" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand">

            <Button Text="Arc Star" Clicked="MoveToArcStarSubpage" Margin="10"/>

            <Button Text="Frag Grenade" Clicked="MoveToFragGrenadeSubpage" Margin="10"/>

            <Button Text="Thermite Grenade" Clicked="MoveToThermiteGrenadeSubpage" Margin="10"/>

        </StackLayout>
    </ScrollView>
</ContentPage>