<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.SubNavigationPage_Consumeables"
             BackgroundImageSource="Background.png">

    <NavigationPage.TitleView>
        <Label Text="Consumeables" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="PageContent" Margin="20" VerticalOptions="CenterAndExpand">

                <Button Text="Syringe" Clicked="MoveToSyringe" Margin="10"/>

                <Button Text="Med Kit" Clicked="MoveToMedKit" Margin="10"/>

                <Button Text="Shield Cell" Clicked="MoveToShieldCell" Margin="10"/>

                <Button Text="Shield Battery" Clicked="MoveToShieldBattery" Margin="10"/>

                <Button Text="Phoenix Kit" Clicked="MoveToPhoenixKit" Margin="10"/>

                <Button Text="Ultimate Accelerant" Clicked="MoveToUltimateAccelerant" Margin="10"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>