<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.MainPage"
             BackgroundImageSource="Background.png">
    
    <NavigationPage.TitleView>
        <Label Text="Apex Legends Guide" TextColor="White" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand" >

            <Button Text="Weapons" Clicked="MoveToWeaponsSubpage" Margin="10" />

            <Button Text="Defensive Gear" Clicked="MoveToDefensiveSubpage" Margin="10"/>

            <Button Text="Legends" Clicked="MoveToLegendsSubpage" Margin="10"/>

            <Button Text="Grenades" Clicked="MoveToGrenadesSubpage" Margin="10"/>

            <Button Text="Attachments" Clicked="MoveToHopupsSubpage" Margin="10"/>

            <Button Text="Optics" Clicked="MoveToOpticsSubpage" Margin="10"/>

            <Button Text="Consumeables" Clicked="MoveToConsumeablesSubpage" Margin="10"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
