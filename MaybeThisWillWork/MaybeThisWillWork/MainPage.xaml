<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaybeThisWillWork.MainPage"
             BackgroundImageSource="Background.png">
    
    <NavigationPage.TitleView>
        <Label Text="Apex Legends Guide" TextColor="White" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout Margin="20">

            <Button Text="Weapons" Clicked="MoveToWeaponsSubpage" />
            
            <Button Text="Defensive Gear" Clicked="MoveToDefensiveSubpage" />

            <Button Text="Legends" Clicked="MoveToLegendsSubpage" />

            <Button Text="Grenades" Clicked="MoveToGrenadesSubpage" />

        </StackLayout>
    </ScrollView>

</ContentPage>
